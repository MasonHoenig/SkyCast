@{
    ViewData["Title"] = "Home Page";
}

@model WeatherApp.Models.WeatherLocation

<div class="text-center">
    

    <form asp-action="WeatherAPI" asp-controller="Home">
        <div class="container mt-4">
            <div class="card shadow-sm p-4 text-center" style="max-width: 400px; margin: auto;">
                <h1 class="text-primary font: Helvetica">SkyCast</h1>
                <hr />
                <h4 class="text-secondary">📍 Enter Location</h4>
                <div class="input-group mt-3">
                    <input class="form-control form-control-lg" type="text" placeholder="ex: Paris, France" asp-for="Location" />
                    <button class="btn btn-primary btn-lg" type="submit">Go!</button>
                </div>
            </div>
        </div>

        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="card shadow-sm text-center p-3 mb-4" style="border-radius: 15px;">
                        <h4 class="text-secondary">🌡 Temperature</h4>
                        <h2 class="text-danger fw-bold">@ViewBag.Temperature°</h2>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm text-center p-3 mb-4" style="border-radius: 15px;">
                        <h4 class="text-secondary">🔥 Feels Like</h4>
                        <h2 class="text-warning fw-bold">@ViewBag.FeelsLike°</h2>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="card shadow-sm text-center p-3 mb-4" style="border-radius: 15px;">
                        <h4 class="text-secondary">☀ UV Index</h4>
                        <h2 class="text-success fw-bold">@ViewBag.UvIndex</h2>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm text-center p-3 mb-4" style="border-radius: 15px;">
                        <h4 class="text-secondary">☁️ Cloud Coverage</h4>
                        <h2 class="text-secondary fw-bold">@ViewBag.Coverage</h2>
                    </div>
                </div>
            </div>

        </div>

    </form>
</div>
